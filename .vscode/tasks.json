{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Client Linux g++ Debug",
            "type": "shell",
            "command": "make",
            "args": [
                "debug"
            ],
            "group": { 
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/WiseMoleClient"
            }
        },
        {
            "label": "Client Linux g++ Release",
            "type": "shell",
            "command": "make",
            "args": [
                "release"
            ],
            "group": { 
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/WiseMoleClient"
            }
        },
        {
            "label": "Client Linux g++ Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": { 
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/WiseMoleClient"
            }
        }
    ]
}
